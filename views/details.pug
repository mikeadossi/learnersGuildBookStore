extends layout

block content

  ul.bookDetailsContainer
      li.details.titleDetail= book.title
      li.details.authorDetail= book.author
      ul.details
        img(src=book.image_url).bookImg
      li.details.bookDescriptionDetail= book.description

      form(name='delete', id='delete-form', action='/books/delete/${book.id}, method='get')
        input(type='submit' value='Delete Book')
